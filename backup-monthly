        mkdir -p $dir
        delete_old $RETENTION $server $dir
        cd $dir
        location_sync_full $server
    elif [[ $today == "24" && $INTERVAL == "monthly-full-24" ]]; then
        dir="$DESTINATION/$server/monthly/monthly-full/$month"
        mkdir -p $dir
