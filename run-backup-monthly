### DO NOT EDIT BELOW THIS LINE ###
TOP_DIR=$(cd $(dirname "$0") && pwd)
source $TOP_DIR/backup-headers

mkdir -p $LOG_DIR $BACKUP_TARGET
cat $BACKUP_CONFIG | grep -v '^\#' | grep -v '^$' | grep -i 'monthly' | awk -F":" '{ print $1":"$2":"$3":"$4":"$5":"$6":"$7":"$8":"$9 }' > $BACKUP_CONFIG_MONTHLY
$BACKUP_MONTHLY -t $BACKUP_TARGET -c $BACKUP_CONFIG_MONTHLY -l $BACKUP_LOG_MONTHLY -u $BACKUP_USER
